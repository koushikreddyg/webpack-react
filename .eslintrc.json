{
  "extends": ["standard", "plugin:react/recommended"],
  "rules": {
    "quotes": ["error", "double"],
    "no-console":"off",
    "semi": ["error", "always"],
    "space-before-function-paren": 0,
    "prefer-destructuring": ["error", {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": true,
          "object": false
        }
      }, {
        "enforceForRenamedProperties": false
      }]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.7.0"
    }
  },
  "parser": "babel-eslint",
  "plugins": ["react"]
}
